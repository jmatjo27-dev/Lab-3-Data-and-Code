const int POTENTIOMETER_PIN = A2;
const int THERMISTOR_PIN = A3; 
const int HEATER_PIN = 9;

void setup() {
  pinMode(HEATER_PIN, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int potValue = analogRead(A2);  
  int thermValue = analogRead(A3);   

  int dutyCycle = map(potValue, 0, 1023, 0, 255);
  analogWrite(HEATER_PIN, dutyCycle);

  Serial.print(millis());
  Serial.print(",");
  Serial.print(potValue);
  Serial.print(",");
  Serial.println(thermValue);

  delay(200);
}
